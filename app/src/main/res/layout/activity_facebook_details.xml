<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacebookDetailsActivity">

    <ImageView
        android:id="@+id/post_image_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/post_info"
        app:layout_constraintTop_toBottomOf="@id/post_image_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Post Info: "
        android:layout_marginTop="24dp"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/post_name"
        app:layout_constraintTop_toBottomOf="@id/post_info"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        tools:text="Name:"
        android:layout_marginTop="56dp"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/post_status"
        app:layout_constraintTop_toBottomOf="@id/post_name"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        tools:text="Status:"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>